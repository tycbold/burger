<h1>Eat those Burgers!</h1>

<div class='not-eaten'>
<h2>Burgers that are not eaten!</h2>

<ul>
  {{#each myburgers}}
  {{#unless devoured}}
      {{> burger-block devoured=true}}
    {{/unless}}
   {{/each}}
</ul>
</div>

<div class="eaten">
<h2>Burgers that are eaten! :(</h2>

<ul>
  {{#each myburgers}}
    {{#if devoured}}
      {{> burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

<div class='add-burger'>
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>


  <button type="submit">Add Burger</button>
</form>
</div>